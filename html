<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


<script>
// Smooth Scroll με jQuery
$("a.nav-link").on("click", function(e) {
if(this.hash !== "") {
e.preventDefault();
const hash = this.hash;
$('html, body').animate({
scrollTop: $(hash).offset().top - 70
}, 800);
}
});


// Fade-in animation για projects
$(window).on("scroll", function() {
$(".project-card").each(function() {
const top_of_element = $(this).offset().top;
const bottom_of_screen = $(window).scrollTop() + $(window).height();
if (bottom_of_screen > top_of_element + 50) {
$(this).addClass("show");
}
});


// Fade-in για Contact
const contact = $("#contact");
if ($(window).scrollTop() + $(window).height() > contact.offset().top + 50) {
contact.addClass("show");
}
});


// Fade-in για Header
$(document).ready(function(){
setTimeout(() => {
$("#main-header").addClass("show");
}, 300);
});
</script>


</body>
</html>
